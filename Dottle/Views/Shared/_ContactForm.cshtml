@using Microsoft.AspNetCore.Http
@model Dottle.ViewModels.Inquiry

<form asp-controller="Posts" asp-action="Contact" method="POST">
    <div class="form-group">
        <label for="email">Your email</label>
        <input type="email" class="form-control" name="From" placeholder="Enter email" id="email">
    </div>
    <div class="form-group">
        <label for="title">Inquiry title</label>
        <input type="text" class="form-control" name="Title" placeholder="Enter title" id="title">
    </div>
    <div class="form-group">
        <label for="message">Message</label>
        <textarea class="form-control" name="Message" placeholder="Your inquiry" id="message"></textarea>
    </div>

    <input type="hidden" name="Name" value="@Context.Session.GetString("user")">
    <input type="hidden" name="Email" value="@Model.Email">

    <button class="button normal" onclick="history.back()" style="vertical-align: middle"><span>Submit Inquiry</span></button>
</form>