@model PostModel

<div class="container">
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">@Model.Title</h3>
            <h6 class="card-subtitle mb-2 text-muted">@Model.Description</h6>
        </div>
        <div class="card-body">
            <ul class="list-group list-grou-flush">
                <h6 class="card-title">Contacts</h6>
                <li class="list-group-item">
                    <div>
                        <b>Phone number:</b> @Model.PhoneNumber
                    </div>
                    <div>
                        <b>Email:</b> @Model.Email
                    </div>
                    <div>
                        <b>Address:</b> @Model.Address
                    </div>
                </li>
                
                <h6 class="card-title" style="margin-top: 8px;">Working hours</h6>
                <li class="list-group-item">
                    <div>
                        @Html.Raw(@Model.PrettyWorkingHours())
                    </div>
                </li>
            </ul>
        </div>
    </div>
</div>

