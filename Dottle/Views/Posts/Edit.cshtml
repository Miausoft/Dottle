@model PostEditViewModel
@using Dottle.Helpers
<div class="card">
    <div class="card-header">
        <h5>Editing Post</h5>
    </div>
    <div class="card-body">
        <div class="container">
            <form id="update-post-form" method="post" data-post="@Model.Post.Id">
                <div class="form-group">
                    <label for="PostTitle">Title</label>
                    <input type="text" class="form-control" id="PostTitle" placeholder="Post title" value="@Model.Post.Title">
                </div>
                <div class="form-group">
                    <label for="PostPhoneNumber">Phone Number</label>
                    <input type="text" class="form-control" id="PostPhoneNumber" placeholder="Post phone number" value="@Model.Post.PhoneNumber">
                </div>
                <div class="form-group">
                    <label for="PostEmail">Email</label>
                    <input type="text" class="form-control" id="PostEmail" placeholder="Post email" value="@Model.Post.Email">
                </div>
                <div class="form-group">
                    <label for="PostAddress">Address</label>
                    <input type="text" class="form-control" id="PostAddress" placeholder="Post address" value="@Model.Post.Address">
                </div>
                <div class="form-group">
                    <label for="PostDescription">Description</label>
                    <textarea class="form-control" rows="4" id="PostDescription" placeholder="Post description">@Model.Post.Description</textarea>
                </div>
                <div class="form-group">
                    <label class="working-hours-label">Working Hours</label>
                    @{
                        foreach (var item in @Model.Days.Select((day, i) => new { i, day }))
                        {
                            Html.RenderPartial("_DayCheck", MarkedDayHelper.generateDayParam(item.i, item.day, @Model.MarkedTimes));
                        }
                    }
                </div>
                <button type="submit" class="btn btn-primary">Save</button>
            </form>
        </div>
    </div>
</div>
