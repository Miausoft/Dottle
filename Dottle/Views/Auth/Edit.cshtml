@model Dottle.ViewModels.UserEditModel

<div class="container">
    <div class="row">
        <div class="col-sm-4">
            <h5 class='form-header'>Editing User @Model.Username</h5>

            <h6>Change Password</h6>

            <form asp-action="Update" method="post">
                <div class="form-group mx-sm-3 mb-2">
                    <label asp-for="Password">Password</label>
                    <input asp-for="Password" type="password" class="form-control">
                    @Html.ValidationMessageFor(m => m.Password)
                </div>
                <div class="form-group mx-sm-3 mb-2">
                    <label asp-for="PasswordConfirm">Password confirmation</label>
                    <input asp-for="PasswordConfirm" type="password" class="form-control">
                    @Html.ValidationMessageFor(m => m.Password)
                </div>
                <input asp-for="Username" type="hidden" value="@Model.Username"/>
                <button type="submit" class="button normal" style="vertical-align: middle"><span>Change Password</span></button>
            </form>
        </div>
    </div>
</div>
