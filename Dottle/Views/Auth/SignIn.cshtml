@model Dottle.Models.UserRegisterModel;
<div class="auth-container">
    <div class="container box">
        <h1>Sign In</h1>
        <form asp-action="SignIn" method="post">
            <div class="form-group">
                <label asp-for="Name">Name</label>
                <input asp-for="Name" class="form-control">
                @Html.ValidationMessageFor(m => m.Name)
            </div>
             <div class="form-group">
                <label asp-for="Password">Password</label>
                <input asp-for="Password" type="password" class="form-control">
                @Html.ValidationMessageFor(m => m.Password)
            </div>
            <div class="form-group">
                <a asp-controller="Auth" asp-action="SignUp">Not a member yet? Sign up</a>
            </div>
            <button type="submit" class="button normal" style="vertical-align: middle"><span>Sign In</span></button>
        </form>
    </div>
</div>