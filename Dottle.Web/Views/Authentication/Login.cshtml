@model LoginViewModel

<head>
    <title>@ViewBag.Title</title>
</head>

<body>
    <div>
        <h4 class="text-center pb-4">Create New Account</h4>
        <div asp-validation-summary="ModelOnly" class="alert alert-danger alert-dismissible fade show" role="alert">
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
        <form method="post" asp-controller="Authentication" asp-action="Login" asp-route-returnUrl="@Context.Request.Query["returnurl"]">
            <div class="form-group required">
                <input asp-for="Email" class="form-control" placeholder="Email" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group required">
                <input asp-for="Password" type="password" class="form-control" placeholder="Password" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary btn-md btn-block waves-effect text-center m-b-20" style="padding:5px 35px 5px 35px;">Login</button>
        </form>
    </div>
</body>
