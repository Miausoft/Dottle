@model CreateViewModel

<head>
    <title>@ViewBag.Title</title>
</head>

<body>
    <div>
        <h4 class="text-center pb-4">Create New Account</h4>
        <div asp-validation-summary="ModelOnly" class="alert alert-danger alert-dismissible fade show" role="alert">
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
        <form method="post" asp-controller="User" asp-action="Create" asp-route-returnUrl="@Context.Request.Query["returnurl"]">
            <div class="form-group required">
                <input asp-for="FirstName" class="form-control" placeholder="FirstName" />
                <span asp-validation-for="FirstName" class="text-danger placeholder"></span>
            </div>
            <div class="form-group required">
                <input asp-for="LastName" class="form-control" placeholder="LastName" />
                <span asp-validation-for="LastName" class="text-danger placeholder"></span>
            </div>
            <div class="form-group required">
                <input asp-for="Email" class="form-control" placeholder="Email" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group required">
                <input asp-for="Password" type="password" class="form-control" placeholder="Password" />
                <span asp-validation-for="Password" class="text-danger"></span>
                <small class="form-text text-muted font-italic">
                    <i>Make sure it's at least 5 characters including a number, lowercase and capital letter.</i>
                </small>
            </div>
            <div class="form-group required">
                <input asp-for="ConfirmPassword" type="password" class="form-control" placeholder="Confirm Password" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary btn-md btn-block waves-effect text-center m-b-20" style="padding:5px 35px 5px 35px;">Register</button>
        </form>
    </div>
</body>
